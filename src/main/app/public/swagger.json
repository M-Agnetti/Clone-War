{
  "openapi": "3.0.3",
  "info": {
    "title": "Clone War",
    "description": "Title",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/artefacts": {
      "get": {
        "description": "Returns all the artifacts",
        "responses": {
          "200": {
            "description": "A list of Artifacts"
          }
        }
      }
    },
    "/artefacts/{id}": {
      "get": {
        "description": "Returns the artifact whose id is {id}",
        "responses": {
          "200": {
            "description": "An artifact"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of a specific artifact",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ]
      }
    },
    "/clones/{id}": {
      "get": {
        "description": "Returns all source codes of an artifact's clones as well as those of cloned artifacts",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the artifact",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of the sources"
          }
        }
      }
    },
    "/scores/{id}": {
      "get": {
        "description": "description",
        "responses": {
          "200": {
            "description": "description"
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of a specific artifact",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ]
      }
    },
    "/all-scores": {
      "get": {
        "description": "Returns",
        "responses": {
          "200": {
            "description": "description"
          }
        }
      }
    },
    "/post/{type}": {
      "post": {
        "description": "Sends a file jar",
        "responses": {
          "202": {
            "description": "Accepted"
          }
        },
        "parameters": [
          {
            "name": "type",
            "in": "path",
            "description": "The type of the jar file received (\"sources\" or \"classes\")",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/class/UploadComplete": {
      "post": {
        "description": "Indicates that the reception of jars is finished",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}